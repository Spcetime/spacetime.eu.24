---
interface Props {
  title?: string;
  text?: string;
}

const { title = "Title", text = "text" } = Astro.props;
---

<div class="flex flex-col max-w-48 w-full h-min items-center relative m-4 slide-icon">
  <slot />
  <div class="text-center text-lg font-semibold uppercase">{title}</div>
  <div class="text-sm text-center">{text}</div>
</div>
